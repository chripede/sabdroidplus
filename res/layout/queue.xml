<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:orientation="vertical">

    <RelativeLayout android:id="@+id/headerLayout"
              android:layout_height="51px"
              android:layout_width="fill_parent"
              android:background="@drawable/header_background">
          <ImageView
                android:id="@+id/countIcon"
                android:layout_width="49px"
                android:layout_height="49px"
                android:src="@drawable/icon"
                android:layout_alignParentLeft="true"/>
          <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/countIcon"
                android:paddingTop="5px">
                <LinearLayout
                		android:id="@+id/statusTop"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true">
                    <TextView
                        android:id="@+id/headerSpeed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="---"
                        android:textColor="#000000"/>
                    <TextView 
                    	android:id="@+id/headerSpeedType"
						android:layout_width="wrap_content" 
						android:layout_height="wrap_content"
						android:text="KB/s" 
						android:textColor="#6a6a6a"
						android:paddingLeft="4px" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="|"
                        android:textColor="#6a6a6a"
                        android:paddingLeft="4px"/>
                    <TextView
                        android:id="@+id/headerEta"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-:--:--"
                        android:textColor="#000000"
                        android:paddingLeft="4px"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="|"
                        android:textColor="#6a6a6a"
                        android:paddingLeft="4px"/>
                    <TextView
                        android:id="@+id/headerDownloaded"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="---"
                        android:textColor="#000000"
                        android:paddingLeft="4px"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="/"
                        android:textColor="#6a6a6a"
                        android:paddingLeft="4px"/>
                    <TextView
                        android:id="@+id/headerLeft"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="---"
                        android:textColor="#000000"
                        android:paddingLeft="4px"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MB"
                        android:textColor="#6a6a6a"
                        android:paddingLeft="4px"/>
                </LinearLayout>
                <LinearLayout
                		android:id="@+id/statusBottom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/statusTop"
                        android:layout_marginTop="4px">
                    <TextView
                        android:id="@+id/freeSpace"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="--"
                        android:textColor="#000000"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="GB Free"
                        android:textColor="#000000"
                        android:layout_marginLeft="4px"/>
                </LinearLayout>
          </RelativeLayout>
    </RelativeLayout>
    
	<ListView android:id="@+id/queueList"
	          android:layout_height="0dip"
              android:layout_weight="1.0"
	          android:layout_width="fill_parent"
              android:fadingEdge="none"
              android:background="#c6c3c6">
	</ListView>

</LinearLayout>
